<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Main Activity"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:id="@+id/textView"/>
    <ImageView
            android:src="@drawable/steffen"
            android:layout_width="301dp"
            android:layout_height="215dp" android:id="@+id/imageView"
            android:layout_marginBottom="47dp"
            app:layout_constraintBottom_toTopOf="@+id/textView" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="94dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="55dp" android:layout_marginEnd="55dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="Change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button"
            android:layout_marginEnd="154dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="21dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintBottom_toBottomOf="parent"
            android:onClick="onClickStartChangePicActivity"
            android:layout_marginBottom="286dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="162dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>