<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context="edu.ntnu.oflarsen.idatt2506.oving3.MainActivity">

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp" />

    <TextView
        android:id="@+id/beskrivelse"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_below="@+id/spinner"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp" />

    <LinearLayout
        android:id="@+id/bildeknapp_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/beskrivelse"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@color/list"
        android:orientation="horizontal" />

    <LinearLayout
        android:id="@+id/list_grid_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bildeknapp_layout"
        android:layout_marginTop="20dp"
        android:baselineAligned="true"
        android:orientation="horizontal">

        <ListView
            android:id="@+id/listView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@color/list" />

        <GridView
            android:id="@+id/gridView"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@color/grid"
            android:gravity="center_horizontal"
            android:numColumns="auto_fit"
            android:textAlignment="center" />

    </LinearLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="@string/avslutt" />

</RelativeLayout>